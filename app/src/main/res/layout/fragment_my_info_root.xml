<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dai1pan.MyInfoRootFragment"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.dai1pan.MyProfileFragment"
            android:id="@+id/fragment_my_profile"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.dai1pan.ListFragment.MyTweetFragment"
            android:id="@+id/fragment_my_tweet"/>
    </FrameLayout>

</LinearLayout>
