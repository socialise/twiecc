                android:layout_height="wrap_content"
                android:text="時間指定なし："/>

            <Button
                android:id="@+id/intervalEditButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="編集" />

        </LinearLayout>

        <TextView
            android:id="@+id/dispIntervalText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#8fbc8f"
            android:text="設定文章なし" />

    </LinearLayout>

