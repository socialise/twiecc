<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:weightSum="1">

    <!--名前表示-->

    <!--ID表示用-->
    <TextView
        android:id="@+id/idText"
        android:layout_width="237dp"
        android:layout_height="40dp"
        android:text="境の馬鹿"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/nameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="75dp"
        android:layout_y="36dp" />

    <!--画像表示用-->
    <TextView
        android:id="@+id/nameText"
        android:layout_width="237dp"
        android:layout_height="27dp"
        android:text="A"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/idText"
        android:layout_alignStart="@+id/idText"
        android:layout_x="75dp"
        android:layout_y="5dp" />

    <com.loopj.android.image.SmartImageView
        android:id="@+id/profileImage"
        android:layout_width="50dp"
        android:layout_height="49dp"
        android:layout_toEndOf="@+id/idText"
        android:layout_below="@+id/idText"
        android:layout_x="19dp"
        android:layout_y="6dp" />

    <!--プロフ文章-->
    <TextView
        android:id="@+id/profileText"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="ESES"
        android:layout_marginLeft="99dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/followerText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="46dp"
        android:layout_y="87dp" />

    <TextView
        android:id="@+id/followText"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/followerText"
        android:layout_alignBottom="@+id/followerText"
        android:layout_toLeftOf="@+id/followerText"
        android:layout_toStartOf="@+id/followerText"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_x="22dp"
        android:layout_y="221dp" />

    <TextView
        android:id="@+id/followerText"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profileImage"
        android:layout_toRightOf="@+id/profileText"
        android:layout_toEndOf="@+id/profileText"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_x="180dp"
        android:layout_y="221dp" />

    <Button
        android:id="@+id/multiDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一括削除"/>




</AbsoluteLayout>