<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dai1pan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Base.ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Twitter4Jをはじめて使うテスト用の記述 -->
        <activity
            android:name=".Base.TwitterOAuthActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="twitter"
                    android:scheme="gabu" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WriteTweetActivity"
            android:label="ツイート書込み" />
        <activity android:name=".LikeListActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".Detail.DetailTweetActivity"></activity>
        <activity android:name=".ListFragment.SomebodyAdministrator"></activity>
        <activity android:name=".FollowingUserListActivity"></activity>
    </application>

</manifest>